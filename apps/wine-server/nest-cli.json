{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../static/**",
        "outDir": "dist/apps/wine-server/static",
        "watchAssets": true
      }
    ],
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@db/*": ["src/db/*"],
      "@features/*": ["src/features/*"],
      "@shared/*" : ["src/shared/*"]
    }
  }
}
